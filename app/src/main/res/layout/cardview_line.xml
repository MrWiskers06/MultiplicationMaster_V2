<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardBackgroundColor="@color/buttons"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/buttons"
            android:padding="4dp">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="6dp"
                android:contentDescription="@string/img_avatar_description"
                android:src="@drawable/appicon" />

            <TextView
                android:id="@+id/txv_contactsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/img_logo"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txv_contactsMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txv_contactsName"
                android:layout_toEndOf="@id/img_logo"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#000000"
                android:textSize="14sp" />

            <!--<ImageView
                android:id="@+id/icon_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/txv_contactsName"
                android:contentDescription="@string/img_avatar_description"
                android:src="@drawable/round_star_border_24" />-->
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>